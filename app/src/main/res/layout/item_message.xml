<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/group_by_time"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:background="@drawable/shape_group_by_time"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bac_chat_gray"
        android:gravity="right"
        android:layout_marginBottom="3dp"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:id="@+id/rec_yourSelf"
        android:paddingTop="4dp"
        android:paddingRight="12dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/tv_yourSelf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How are you"
            android:maxWidth="330dp"
            android:textSize="18sp"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_light"
            android:id="@+id/yourSelf_time_zone"
            android:text="ddbbbb" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/rec_mySelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bac_chat_green"
        android:gravity="right"
        android:paddingLeft="12dp"
        android:orientation="vertical"
        android:paddingTop="4dp"
        android:paddingRight="12dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/tv_mySelf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How are you"
            android:maxWidth="330dp"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mySelf_time_zone"
            android:text="ddbbbb" />
    </LinearLayout>


</LinearLayout>